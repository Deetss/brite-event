<div class="row">
    <div class="col s12">
        <h1>Sign in</h1>
    </div>
</div>
<div class='row'>
    <%= form_for(:session, url: login_path, :html => {class: "col s12"} ) do |f| %>
        <div class="row">
            <div class='input-field col s6 offset-s3'>
                <%= f.label :email %>
                <%= f.text_field :email, class: 'form_control' %>
            </div>
        </div>
        
        <div class="row">
            <div class='col s6 offset-s3'>        
                <%= f.submit 'Sign in!', class: "waves-effect waves-light btn-large" %>
            </div>
        </div>
    <% end %>
</div>
