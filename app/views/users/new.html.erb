<div class="row">
    <div class="col s6 offset-s3">
        <h1>Sign Up!</h1>
    </div>
</div>
<%= form_for @user, :html => {class: "row"} do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation" class='col s6 offset-s3'>
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <div class="input-field col s6 offset-s3">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'validate', size: 35 %>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6 offset-s3">        
            <%= f.label :email %>
            <%= f.text_field :email, class: 'validate', size: 35 %>
        </div>
    </div>
    <div class="row">
      <%= f.submit 'Sign up!', class: "waves-effect waves-light btn-large" %>
    </div>
<% end %>
