<div class="row">
    <div class="col l6 offset-l3 s12">
        <h1>Sign Up!</h1>
    </div>
</div>
<%= form_for @user, :html => {class: "row"} do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation" class='col l6 offset-l3 s12 red'>
            <h5><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h5>

            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li class="white"><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <div class="input-field col l6 offset-l3 s12">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'validate', size: 35 %>
        </div>
    </div>
    <div class="row">
        <div class="input-field col l6 offset-l3 s12">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'validate', size: 35 %>
        </div>
    </div>
    <div class="row">
      <%= f.submit 'Sign up!', class: "waves-effect waves-light btn-large" %>
    </div>
<% end %>
