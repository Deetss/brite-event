<div class="row">
    <div class="col s12">
        <h1>Sign Up!</h1>
    </div>
</div>
<div class='row'>
    <%= form_for @user, :html => {class: "col s12"} do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                
                <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <div class="row">
            <div class="input-field col s12">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'validate' %>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">        
                <%= f.label :email %>
                <%= f.text_field :email, class: 'validate' %>
            </div>
        </div>
        
        <%= f.submit 'Sign up!', class: "waves-effect waves-light btn-large" %>
    <% end %>
</div>
