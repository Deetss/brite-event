<div class='row'>
  <div class='col s8 push-s2'>
    <% @events.each do |event| %>
        <section class='left-align'>
          <ul>
            <li id="event-name"><%= link_to event.name, event_path(event.id) %></h5></li>
            <li id="event-description" class="left-align"><%= event.description %></li>
            <li class="event-date-time right-align"><span class="date grey-text"><%= event.date %></span> <span class="time grey-text"><%= event.time %></span></li>
          </ul>
        </section>
        <div class="divider"></div>
    <% end %>
  </div>
</div>