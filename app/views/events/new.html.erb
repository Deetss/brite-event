<div class="row">
  <div class="col s12">
    <h1>Create an event!</h1>
  </div>
</div>
<div class='row'>
  <%= form_for :event, :html => {class: "col s12"} do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'validate' %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'validate' %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <%= f.label :date %>
          <%= f.text_field :date, class: 'datepicker' %>
        </div>

        <div class="input-field col s6">
          <%= f.label :time %>
          <%= f.text_field :time, class: 'timepicker' %>
        </div>
      </div>

      <%= f.submit 'Create!', class: 'waves-effect waves-light btn-large' %>

  <% end %>
</div>