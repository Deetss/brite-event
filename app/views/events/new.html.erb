<div class="row">
  <div class="col l12 s12">
    <h1>Create an event!</h1>
  </div>
</div>
<div class='row'>
  <%= form_for :event, :html => {class: "col l12 s12"} do |f| %>
      <% if @event.errors.any? %>
          <div id="error_explanation" class='col l6 offset-l3 s12 red'>
            <h5><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h5>

            <ul>
              <% @event.errors.full_messages.each do |msg| %>
                  <li class="white"><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="row">
        <div class="input-field col l6 offset-l3 s12">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'validate' %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col l6 offset-l3 s12">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'validate' %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col l3 offset-l3 s12">
          <%= f.label :date %>
          <%= f.text_field :date, class: 'datepicker' %>
        </div>

        <div class="input-field col l3 s12">
          <%= f.label :time %>
          <%= f.text_field :time, class: 'timepicker' %>
        </div>
      </div>

      <%= f.submit 'Create!', class: 'waves-effect waves-light btn-large' %>

  <% end %>
</div>