<div class="columns">
  <div class="column">
    <h1>Create an event!</h1>
  </div>
</div>
<div class='columns'>
  <%= form_for :event, :html => {class: "col s12"} do |f| %>
      <div class="columns">
        <div class="input-field column">
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, class: 'input' %>
        </div>
      </div>

      <div class="columns">
        <div class="input-field column">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'input' %>
        </div>
      </div>

      <div class="columns">
        <div class="input-field column">
          <%= f.label :date %>
          <%= f.text_field :date, class: 'datepicker' %>
        </div>

        <div class="input-field column">
          <%= f.label :time %>
          <%= f.text_field :time, class: 'timepicker' %>
        </div>
      </div>

      <%= f.submit 'Create!', class: 'waves-effect waves-light btn-large' %>

  <% end %>
</div>