<div class="row">
  <div class="col s3">
    <h3><%= @event.name %></h3>
    <h5><span class="date grey-text"><%= @event.date %></span> <span class="time grey-text"><%= @event.time %></span></h5>
    <h6>Host: <%= link_to @event.creator.name, @event.creator %></h6>
    <% if @event.attendees.any? %>
      <h6><%= pluralize(@event.attendees.count, "guest") %></h6>
    <% end %>
  </div>
  <div class='col s6'>
    <h6 class='left-align' ><%= @event.description %></h6>
  </div>
</div>