<div class="row">
  <div class="col l3 s12">
    <h3><%= @event.name %></h3>
    <h5><span class="date grey-text"><%= @event.formated_datetime %></span></h5>
    <h6>Host: <%= link_to @event.creator.name, @event.creator %></h6>
    <h6><%= pluralize(@event.attendees.count, "guest") %></h6>
    <% unless @event.attendees.find_by(id: @user.id) %>
      <%= link_to "Register!", event_path(:id => @event.id), class: "waves-effect waves-light btn-large", method: :post %>
    <% end %>
    <ul class="collection with-header">
      <li class="collection-header"><h5>Guest List</h5></li>
    <% @event.attendees.each do |attendee| %>
        <li class="collection-item"><%= link_to attendee.name, attendee %></li>
    <% end %>
    </ul>
  </div>
  <div class='col l6 s12'>
    <h6 class='left-align'><%= @event.description %></h6>
  </div>
</div>
